{% use "bootstrap_3_horizontal_layout.html.twig" %}

{# use attr in a form type to override
    'attr' => [
        'rows' => 5,
    ],
#}
{% block textarea_widget %}
  {% if attr.rows is not defined %}
    {% set attr = attr|merge({rows: 12}) %}
  {% endif %}
  {{- parent() -}}
{% endblock textarea_widget %}

{% block choice_widget_collapsed -%}
  {% if attr.no_select2 is not defined %}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' select2')|trim}) %}
  {% endif %}
  {{- parent() -}}
{%- endblock %}

{% block datepicker_widget -%}
  {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-control datepicker')|trim, "data-format": datepicker_format}) %}
  <input type="text" {{ block('widget_attributes') }} {% if value %}value="{{value}}" {% endif %}/>
{%- endblock %}
