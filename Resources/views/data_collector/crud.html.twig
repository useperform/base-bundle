{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
  {% if collector.activeCrud is not null %}
  {% set icon %}
    <span class="icon">{{ include('@PerformBase/data_collector/crud.svg') }}</span>
    <span class="sf-toolbar-value">&nbsp;&nbsp;{{collector.activeAlias}}</span>
  {% endset %}

  {% set text %}
  {% if not collector.correctVoterStrategy %}
    <div class="sf-toolbar-info-piece">
      <span class="sf-toolbar-status sf-toolbar-status-red">Invalid Security Voter Strategy</span>
    </div>
  {% endif %}
  <div class="sf-toolbar-info-piece">
    <b>Active Crud</b>
    <span class="sf-toolbar-status">{{collector.activeCrud}}</span>
  </div>
  <div class="sf-toolbar-info-piece">
    <b>Loaded Crud</b>
    <span class="sf-toolbar-status">{{ collector.crud | length }}</span>
  </div>
  <div class="sf-toolbar-info-piece">
    <b>Extended Entities</b>
    <span class="sf-toolbar-status">{{ collector.extendedEntities | length }}</span>
  </div>
  {% endset %}

  {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', {'link' : true, status: collector.correctVoterStrategy ? '' : 'red'}) }}
  {% endif %}
{% endblock %}

{% block menu %}
  <span class="label{{collector.activeCrud is null ? ' disabled'}}">
    <span class="icon">{{ include('@PerformBase/data_collector/crud.svg') }}</span>
    <strong>Crud</strong>
  </span>
{% endblock %}

{% block panel %}
  {% if not collector.correctVoterStrategy %}
    <div class="status-error">
      <h2>Invalid Security Voter Strategy</h2>
      <p>
        You should set the security voter strategy to <span class="text-bold">unanimous</span> in <code>security.yml</code> to ensure correct security decisions.
      </p>
      <pre>
security:
    access_decision_manager:
        strategy: unanimous
      </pre>
    </div>
  {% endif %}
  {% if collector.activeCrud is not null %}
    <h2>Active Crud</h2>
    {{collector.activeCrud}}
    {% if collector.typeConfig is not null %}
      <h2>Type Config</h2>
      <table>
        <thead>
          <tr>
            <th scope="col">Field</th>
            <th scope="col">Added Configs</th>
            <th scope="col">Resolved Config</th>
          </tr>
        </thead>
        <tbody>
          {% for field, addedConfigs in collector.addedConfigs %}
            <tr>
              <td>{{ field }}</td>
              <td>
                {% for config in addedConfigs %}
                  {{dump(config)}}
                {% endfor %}
              </td>
              <td class="font-normal">{{dump(collector.typeConfig[field])}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% endif %}
  {% endif %}

  <h2>Loaded Crud</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Entity</th>
        <th scope="col">Crud</th>
      </tr>
    </thead>
    <tbody>
      {% for entityClass, crudClass in collector.crud %}
        <tr>
          <td>{{ entityClass }}</td>
          <td class="font-normal">{{ crudClass }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <h2>Extended Entities</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Parent</th>
        <th scope="col">Child</th>
      </tr>
    </thead>
    <tbody>
      {% for parent, child in collector.extendedEntities %}
        <tr>
          <td>{{ parent }}</td>
          <td>{{ child }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
