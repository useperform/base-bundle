{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
  {% if collector.activeAdmin is not null %}
  {% set icon %}
  <span class="sf-toolbar-value">{{collector.activeAdmin}}</span>
  {% endset %}
  {% endif %}

  {% set text %}
  <div class="sf-toolbar-info-piece">
    <b>Loaded Admins</b>
    <span class="sf-toolbar-status">{{ collector.admins | length }}</span>
  </div>
  <div class="sf-toolbar-info-piece">
    <b>Extended Entities</b>
    <span class="sf-toolbar-status">{{ collector.extendedEntities | length }}</span>
  </div>
  {% endset %}

  {{ include('@WebProfiler/Profiler/toolbar_item.html.twig') }}
{% endblock %}

{% block menu %}
  <span class="label">
    <span class="icon">{{ include('@PerformBase/data_collector/admins.svg') }}</span>
    <strong>Admins</strong>
  </span>
{% endblock %}

{% block panel %}
  {% if collector.activeAdmin is not null %}
    <h2>Active Admin</h2>
    {{collector.activeAdmin}}
  {% endif %}
  {% if collector.typeConfig is not null %}
    <h2>Type Config</h2>
    <table>
      <thead>
        <tr>
          <th scope="col">Field</th>
          <th scope="col">Added Configs</th>
          <th scope="col">Resolved Config</th>
        </tr>
      </thead>
      <tbody>
        {% for field, addedConfigs in collector.addedConfigs %}
          <tr>
            <td>{{ field }}</td>
            <td>
              {% for config in addedConfigs %}
                {{dump(config)}}
              {% endfor %}
            </td>
            <td class="font-normal">{{dump(collector.typeConfig[field])}}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}

  <h2>Loaded Admins</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Entity</th>
        <th scope="col">Admin</th>
      </tr>
    </thead>
    <tbody>
      {% for entity, admin in collector.admins %}
        <tr>
          <td>{{ entity }}</td>
          <td class="font-normal">{{ admin }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <h2>Extended Entities</h2>
  <table>
    <thead>
      <tr>
        <th scope="col">Parent</th>
        <th scope="col">Child</th>
      </tr>
    </thead>
    <tbody>
      {% for parent, child in collector.extendedEntities %}
        <tr>
          <td>{{ parent }}</td>
          <td>{{ child }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
