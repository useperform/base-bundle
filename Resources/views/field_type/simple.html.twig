{% block list %}
  {% if value is defined %}
    {{value}}
  {% else %}
    {{attribute(entity, field)}}
  {% endif %}
{% endblock %}

{% block view %}
  {{block('list')}}
{% endblock %}

{% block create %}
  {{form_row(form[field])}}
{% endblock %}

{% block edit %}
  {{block('create')}}
{% endblock %}
