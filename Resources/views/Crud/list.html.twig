{% extends 'PerformBaseBundle::base.html.twig' %}

{% block workspace %}
  <h3><i class="fa fa-angle-right"></i> Items</h3>
  {% block actions %}
    <a href="{{path(routePrefix~'create')}}" class="btn btn-primary">Create</a>
  {% endblock %}
  <div class="row mt">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table class="table">
            <thead>
              {% for field, options in fields %}
                <th>{{crud_label(field, options)}}</th>
              {% endfor %}
            </thead>
            <tbody>
              {% for entity in entities %}
                <tr>
                  {% for field, options in fields %}
                    <th>{{ crud_list_context(entity, field, options) }}</th>
                  {% endfor %}
                  {% block entityActions %}
                    <td>
                      <a href="{{crud_route(entity, 'view')}}">View</a>
                      <a href="{{crud_route(entity, 'edit')}}">Edit</a>
                      <a href="#" data-action="{{crud_route(entity, 'delete')}}" data-toggle="modal" data-target="#modal-delete">Delete</a>
                    </td>
                  {% endblock %}
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block extras %}
  {% include 'PerformBaseBundle:Crud:modal/delete.html.twig' %}
{% endblock %}
