{% extends 'PerformBaseBundle::base.html.twig' %}

{% block workspace %}
  <h3><i class="fa fa-angle-right"></i> Edit</h3>
  <div class="panel panel-default">
    <div class="panel-body">
      {{form_start(form)}}
      {% for field, config in fields %}
        {{perform_crud_edit_context(entity, field, config, form)}}
      {% endfor %}
      {% block actions %}
        <a href="{{perform_crud_route(entity, 'list')}}" class="btn btn-default" tabindex="-1">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
      {% endblock %}
      {{form_end(form)}}
    </div>
  </div>
{% endblock %}
