<div class="row">
  <div class="col-sm-3 pagination-counter">
    <p>
      {{paginator.currentPageOffsetStart}} - {{paginator.currentPageOffsetEnd}} of {{paginator.nbResults}}
    </p>
  </div>
  <div class="col-sm-9">
    {% if paginator.haveToPaginate %}
      {% set query = app.request.query.all %}
      <nav aria-label="Page navigation">
        <ul class="pagination">

          <li{% if paginator.currentPage==1 %} class="disabled" {% endif %}>
            <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: 1}))}}" aria-label="First">
              <span aria-hidden="true"><i class="fa fa-angle-double-left"></i> First</span>
            </a>
          </li>

          {% if paginator.currentPage == 1 %}
            <li class="disabled">
              <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: 1}))}}" aria-label="Previous">
                <span aria-hidden="true"><i class="fa fa-angle-left"></i> Previous</span>
              </a>
            </li>
          {% else %}
            <li>
              <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: paginator.currentPage - 1}))}}" aria-label="Previous">
                <span aria-hidden="true"><i class="fa fa-angle-left"></i> Previous</span>
              </a>
            </li>
          {% endif %} {% for i in 1..paginator.nbPages %} {% if paginator.currentPage == i %}
            <li class="active">
              <span>{{i}}</span>
            </li>
          {% else %}
            <li>
              <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: i}))}}">{{i}}</a>
            </li>
          {% endif %} {% endfor %} {% if paginator.currentPage == paginator.nbPages %}
            <li class="disabled">
              <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: paginator.currentPage}))}}" aria-label="Next">
                <span aria-hidden="true">Next <i class="fa fa-angle-right"></i></span>
              </a>
            </li>
          {% else %}
            <li>
              <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: paginator.currentPage + 1}))}}" aria-label="Next">
                <span aria-hidden="true">Next <i class="fa fa-angle-right"></i></span>
              </a>
            </li>
          {% endif %}

          <li{% if paginator.currentPage == paginator.nbPages %} class="disabled" {% endif %}>
            <a href="{{perform_crud_route(entityClass, 'list', query|merge({page: paginator.nbPages}))}}" aria-label="Next">
              <span aria-hidden="true">Last <i class="fa fa-angle-double-right"></i></span>
            </a>
          </li>

        </ul>
      </nav>
    {% endif %}
  </div>
</div>
