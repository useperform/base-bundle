{% if paginator.haveToPaginate %}
  <nav aria-label="Page navigation">
    <ul class="pagination">

      <li{% if app.request.query.get('page', 1) == 1 %} class="disabled"{% endif %}>
        <a href="{{perform_crud_route(entityClass, 'list')}}" aria-label="First">
          <span aria-hidden="true"><i class="fa fa-angle-double-left"></i> First</span>
        </a>
      </li>

      {% if app.request.query.get('page', 1) == 1 %}
        <li class="disabled">
          <a href="{{perform_crud_route(entityClass, 'list', {page: 1})}}" aria-label="Previous">
            <span aria-hidden="true"><i class="fa fa-angle-left"></i> Previous</span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="{{perform_crud_route(entityClass, 'list', {page: app.request.query.get('page', 2)-1})}}" aria-label="Previous">
            <span aria-hidden="true"><i class="fa fa-angle-left"></i> Previous</span>
          </a>
        </li>
      {% endif %}

      {% for i in 1..paginator.nbPages %}
        {% if app.request.query.get('page', 1) == i %}
          <li class="active">
            <span>{{i}}</span>
          </li>
        {% else %}
          <li>
            <a href="{{perform_crud_route(entityClass, 'list', {page: i})}}">{{i}}</a>
          </li>
        {% endif %}
      {% endfor %}

      {% if app.request.query.get('page') == paginator.nbPages %}
        <li class="disabled">
          <a href="{{perform_crud_route(entityClass, 'list', {page: app.request.query.get('page')})}}" aria-label="Next">
            <span aria-hidden="true">Next <i class="fa fa-angle-right"></i></span>
          </a>
        </li>
      {% else %}
        <li>
          <a href="{{perform_crud_route(entityClass, 'list', {page: app.request.query.get('page', 1)+1})}}" aria-label="Next">
            <span aria-hidden="true">Next <i class="fa fa-angle-right"></i></span>
          </a>
        </li>
      {% endif %}

      <li{% if app.request.query.get('page') == paginator.nbPages %} class="disabled"{% endif %}>
        <a href="{{perform_crud_route(entityClass, 'list', {page: paginator.nbPages})}}" aria-label="Next">
          <span aria-hidden="true">Last <i class="fa fa-angle-double-right"></i></span>
        </a>
      </li>

    </ul>
  </nav>
{% endif %}
