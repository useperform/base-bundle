{% extends 'PerformBaseBundle:Security:login.html.twig' %}

{% block title %}
  {% if error is defined %}
    Invalid token
  {% else %}
    Reset your password
  {% endif %}
{% endblock %}

{% block panel_body %}
  {% if form is defined and form is not null %}
  {{form_start(form)}}
  {{form_row(form.password)}}
  <button type="submit" class="btn btn-primary">Reset password</button>
  {{form_end(form)}}
  {% else %}
  <div class="alert alert-danger">
    <p>
      This token is invalid or has expired.
    </p>
  </div>
  {% endif %}
{% endblock %}
